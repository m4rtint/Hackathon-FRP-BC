    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBarWidgetTheme</item>
    </style>
    
    <!-- Action bar theme. -->
    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    	<item name="android:background">@drawable/gradient_actionbar</item>
    </style>
    
    <style name="ActionBarWidgetTheme" parent="@android:style/Theme.Holo" >
    	<item name="android:textColorHint">#C8FFFFFF</item>
    </style>
    
    <!-- Contact Us TextView theme. -->
    <style name="ContactUsText" parent="@android:style/Widget.Holo.TextView">
    	<item name="android:textSize">18sp</item>
    	<item name="android:bufferType">spannable</item>
    </style>
    
    <!-- POI Details Button theme. -->
    <style name="POIActionButton" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
		<item name="android:textSize">16sp</item>
		<item name="android:padding">5dp</item>
		<item name="android:background">@drawable/poi_action_button</item>
    </style>

</resources>
